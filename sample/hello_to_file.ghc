% -*- coding:utf-8-unix; mode:prolog -*-
% write hello message to './hello.txt'
main([_|Ss]) :-
    outstream([open('./hello.txt',
                    [rdwr, creat,
                     rusr, wusr, rgrp, wgrp], O),
               write(O, 'Hello ') | OStream]),
    writes(Ss, O, OStream).

writes([], O, OStream) :- OStream = [nl(O)].
writes([S|Ss], O, OStream) :-
    OStream = [write(O, S), write(O, ' ') | OStream2],
    writes(Ss, O, OStream2).
